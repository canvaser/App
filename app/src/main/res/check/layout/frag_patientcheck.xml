<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:alpha="0.3"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_head"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:id="@+id/tv_name"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="王小二"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_bedid"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="性别：女"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_zyh"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="年龄：44岁"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_sex"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="膳食信息：普食"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|right"
                    android:id="@+id/tv_age"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="膳食信息：普食"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/tv_guoming"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="药物过敏 ： 无"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/lin"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icon_injecting"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_taskname"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:text="口服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textColor="@color/light_blue"
                    android:text="根据3p999999999999fhj9q39q38ijfgre[wafj4389iq[fj4e9iq[fjrugh"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_start"
                    android:textSize="15sp"
                    android:textColor="@color/color_base_txt_gray"
                    android:text="王小二"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_key"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_base_txt_gray"
                    android:text="二病区1床"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv_advid"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_base_txt_gray"
                    android:text="11-01 07:33"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>