<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg_login">

    <com.siweisoft.lib.view.other.AppScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/icon_bg_updatepwd"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="   工号:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:gravity="center_vertical|left"
                    android:text="1111"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/et_account"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/icon_bg_updatepwd"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="   病区:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_vertical|left"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/tv_area"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/icon_bg_updatepwd"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="   密码:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="textPassword"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/et_pwd"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:text="登录"
                android:textColor="@color/color_title_select"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.siweisoft.lib.view.other.AppScrollView>
</LinearLayout>