<?xml version="1.0" encoding="utf-8"?>
<com.siweisoft.lib.view.menuview.homebottom.HomeBottomItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_base_graybg"
    android:id="@+id/root">

    <LinearLayout
        android:background="@drawable/drawable_press_black_while"
        android:padding="1dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_info_chart"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/color_base_txt_gray"
            android:text="工作明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.siweisoft.lib.view.menuview.homebottom.HomeBottomItem>