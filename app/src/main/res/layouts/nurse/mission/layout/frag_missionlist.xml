<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isLoadMore="false"
        app:overlay="false"
        app:progress_colors="@array/material_colors"
        app:wave_color="@color/color_base"
        app:wave_height_type="normal"
        app:progress_size_type="normal"
        app:wave_show="false"
        app:progress_show_circle_backgroud="false"
        android:background="@color/color_bg_refresh"
        >
<com.siweisoft.lib.view.pinnedheaderexpandablelistview.expandable.ui.PinnedHeaderExpandableListView
    android:background="@color/white"
    android:id="@+id/elv_elv"
    android:dividerHeight="0dp"
    android:divider="@null"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    </com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout>

</LinearLayout>