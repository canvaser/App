<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<LinearLayout

    android:background="@color/color_base_graybg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
   <LinearLayout
       android:id="@+id/ll_all"
       android:layout_weight="1"
       android:gravity="center"
       android:layout_width="0dp"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/tv_all"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:background="@drawable/drawable_bg_missionhead_txt"
           android:text="全部"
           android:textSize="15sp"
           android:textColor="@color/color_base_txt_gray"
           android:gravity="center"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lin"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_lin"
            android:background="@drawable/drawable_bg_missionhead_txt"
            android:text="临时"
            android:textSize="15sp"
            android:textColor="@color/color_base_txt_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_long"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_long"
            android:background="@drawable/drawable_bg_missionhead_txt"
            android:text="长期"
            android:textSize="15sp"
            android:textColor="@color/color_base_txt_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>