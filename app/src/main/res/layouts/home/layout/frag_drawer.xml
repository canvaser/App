<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="@color/white">
        <TextView
            android:id="@+id/tv_sendd"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@color/green"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:text="点击发送"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp" />


        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_selectt"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@color/red"
            android:text="请选择病人"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:id="@+id/ll_menuroot"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/twhite"
                android:elevation="1dp">


                <TextView
                    android:text="手术室"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_cares"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/drawable_gou"
                    />
            </RelativeLayout>
            <View
                android:background="@color/darkgray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/twhite"
                android:elevation="1dp">


                <TextView
                    android:text="麻醉室"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_cares"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/drawable_gou"
                    />
            </RelativeLayout>
            <View   android:background="@color/darkgray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/twhite"
                android:elevation="1dp">


                <TextView
                    android:text="医生"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_cares"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/drawable_gou"
                    />
            </RelativeLayout>
            <View
                android:background="@color/darkgray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/twhite"
                android:elevation="1dp">


                <TextView
                    android:text="护士长"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_cares"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/drawable_gou"
                    />
            </RelativeLayout>
            <View
                android:background="@color/darkgray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:id="@+id/rl_cares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/twhite"
                android:elevation="1dp">


                <TextView
                    android:text="其他护士"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_cares"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/drawable_gou"
                    />
            </RelativeLayout>
            <View
                android:background="@color/darkgray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </LinearLayout>

    <View
android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <View

        android:background="@drawable/icon_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    </LinearLayout>