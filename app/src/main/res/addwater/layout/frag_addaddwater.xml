<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/icon_bg_exp_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isLoadMore="false"
        app:wave_color="@color/color_base"
        app:progress_size_type="normal"
        android:background="@color/color_bg_refresh"
        app:overlay="false"
        app:wave_show="false"
        app:wave_height_type="normal"
        app:progress_show_circle_backgroud="false">

        <android.support.v7.widget.RecyclerView
            android:background="@color/white"
            android:overScrollMode="never"
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="清空"
                android:textColor="@color/black"
                android:background="@color/color_blue_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_start"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="测滴速"
                android:textColor="@color/black"
                android:background="@color/color_blue_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>