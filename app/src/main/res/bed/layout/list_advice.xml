<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/root">

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/drawable_press_black_while"
        android:gravity="center_vertical"
        android:id="@+id/ll_before"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_codename"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/lin"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icon_injecting"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left|center_vertical"
                    android:id="@+id/tv_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_900"
                    android:text="根据3p999999999999fhj9q39q38ijfgre[wafj4389iq[fj4e9iq[fjrugh"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right|center_vertical"
                    android:id="@+id/tv_type"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_700"
                    android:text="王小二"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left|center_vertical"
                    android:text="12"
                    android:id="@+id/tv_start"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="12"
                    android:id="@+id/tv_end"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:text="12"
                    android:gravity="right|center_vertical"
                    android:id="@+id/tv_num"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_after"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:text="手术后医嘱"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>