<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_graybg">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twhite">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_info_bedreport"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="我的姓名"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_icon2"
            android:layout_marginLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_name"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:id="@+id/rl_workers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twhite">

        <ImageView
            android:id="@+id/iv_icon4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_info_chart"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="我的账号"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_icon4"
            android:layout_marginLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_account"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />


    <RelativeLayout
        android:id="@+id/rl_updatepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twhite">

        <ImageView
            android:id="@+id/iv_cares"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_info_chart"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="修改密码"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_cares"
            android:layout_marginLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arraw" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twhite">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_info_chart"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="软件版本"
            android:id="@+id/tv_name1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_icon1"
            android:layout_marginLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_verson"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />


    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twhite">

        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_info_chart"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="服务器地址"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_icon3"
            android:layout_marginLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_serverip"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>