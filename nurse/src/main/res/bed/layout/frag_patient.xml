<?xml version="1.0" encoding="utf-8"?>
<com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:isLoadMore="false"
    app:wave_color="@color/color_base"
    app:progress_size_type="normal"
    android:background="@color/color_bg_refresh"
    app:overlay="false"
    app:wave_show="false"
    app:wave_height_type="normal"
    app:progress_show_circle_backgroud="false">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base_graybg"
        android:clickable="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/ll_baseinfo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:id="@+id/tv_name"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:text="王小二"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:id="@+id/tv_sex"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:text="性别：女"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:id="@+id/tv_age"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:text="年龄：44岁"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_eat"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="膳食信息：普食"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:id="@+id/tv_guoming"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="药物过敏 ： 无"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_gravity="top"
                        android:background="@drawable/icon_bg_du"
                        android:layout_width="40dp"
                        android:layout_height="25dp">

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_centerInParent="true"
                            android:src="@drawable/drawable_arrow_select"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <com.siweisoft.lib.view.recyclerview.GridRecyclerView
                    android:layoutAnimation="@anim/anim_layout_order2"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/drawable_care_border"
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_infodetail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_zyh"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="住院号：5655555"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_brithday"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="出生日期：1983-12-23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="电话：78787878"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="就诊类型"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_what"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="入院诊断"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_starttime"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="入院时间"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_sstime"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="手术记录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_outtime"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"

                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="预出院日"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"
                    android:id="@+id/ll_some"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_mymission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="个人护理任务"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_advice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="医嘱"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_fluid_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="补液卡"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_nurse_document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="护理文书"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:visibility="gone"
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="个人体征"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_assay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="化验报告"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_nurserecord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="护理记录单"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                    <RelativeLayout
                        android:id="@+id/rl_handoverreport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/twhite"
                        android:elevation="1dp">

                        <TextView
                            android:text="交接班记录"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/iv_icon2"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_arraw" />
                    </RelativeLayout>

                    <View
                        android:background="@color/color_base_graybg"
                        android:layout_width="match_parent"
                        android:layout_height="1px" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</com.siweisoft.lib.view.refreshlayout.MaterialRefreshLayout>